{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": false,
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
